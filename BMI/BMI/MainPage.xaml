<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMI"
             x:Class="BMI.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="JK3A24 平井隆成" />
            <Label Text="身長を入力してください"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Text="160.0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   x:Name="height" />

            <Label Text="体重を入力してください"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Text="50.0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   x:Name="weight" />
            
            <Button Text="BMIを計算"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                     x:Name="BMIButton"
                     Clicked="BMI_Button_Click"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>